    "firebase-admin": "^13.4.0",
    "form-data": "^4.0.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.28.0",
    "jalaali-js": "^1.2.8",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
