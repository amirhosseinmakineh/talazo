{
  "name": "talazo-service",
  "version": "1.0.0",
  "description": "Transaction Service for Talazo Platform",
  "author": "Talazo",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "ts-node src/main.ts",
    "start:dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/main.ts",
    "start:debug": "node --inspect-brk -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,apps,libs}/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --testPathPattern=src",
    "test:e2e": "jest --config test/jest-e2e.json",
    "check:mapper-consistency": "ts-node -r tsconfig-paths/register scripts/check-mapper-consistency.ts",
    "check:entity-dto": "ts-node -r tsconfig-paths/register scripts/check-entity-dto-mismatch.ts",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/Core/infra/data-source.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/Core/infra/data-source.ts",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/Core/infra/data-source.ts",
    "migration:validate": "ts-node -r tsconfig-paths/register scripts/validate-migration.ts",
    "migration:generate:prod": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/repository/infrastructure/config/typeorm.config.ts migrations/AutoMigration",
    "db:reset": "powershell -ExecutionPolicy ByPass -File drop-and-create-db.ps1",
    "create-wallets": "ts-node -r tsconfig-paths/register src/cli.ts create-wallets",
    "update-wallet-names": "ts-node -r tsconfig-paths/register src/cli.ts update-wallet-names",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "admin:create": "ts-node -r tsconfig-paths/register src/cli.ts create-admin",
    "admin:create:prod": "ts-node -r tsconfig-paths/register src/admin/script/create-admin-production.ts",
    "security:audit": "npm audit --audit-level=high",
    "security:audit:fix": "npm audit fix",
    "validate:todos": "node scripts/validate-todos.js",
    "ci:validate": "npm run lint:ci && npm run typecheck && npm run security:audit && npm run validate:todos",
    "backup:create": "bash scripts/backup-database.sh",
    "backup:restore": "bash scripts/restore-backup.sh",
    "backup:verify": "ts-node -r tsconfig-paths/register scripts/verify-backup.ts",
    "verify:coverage": "ts-node -r tsconfig-paths/register scripts/verify-infrastructure-coverage.ts",
    "audit:list-services": "ts-node -r tsconfig-paths/register scripts/audit-list-services.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.846.0",
